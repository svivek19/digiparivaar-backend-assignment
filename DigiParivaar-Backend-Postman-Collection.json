{
  "info": {
    "name": "DigiParivaar Backend APIs",
    "description": "Postman collection for DigiParivaar backend assignment",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "lessonId",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Auth - Request OTP",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"phone\": \"9999999999\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/request-otp",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "request-otp"]
        }
      }
    },
    {
      "name": "Auth - Verify OTP",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"phone\": \"9999999999\",\n  \"otp\": \"123456\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/verify-otp",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "verify-otp"]
        }
      }
    },
    {
      "name": "Get All Lessons",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/lessons",
          "host": ["{{baseUrl}}"],
          "path": ["lessons"]
        }
      }
    },
    {
      "name": "Get Lessons with Filters",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/lessons?category=WhatsApp&language=English",
          "host": ["{{baseUrl}}"],
          "path": ["lessons"],
          "query": [
            {
              "key": "category",
              "value": "WhatsApp"
            },
            {
              "key": "language",
              "value": "English"
            }
          ]
        }
      }
    },
    {
      "name": "Get Lesson by ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/lessons/{{lessonId}}",
          "host": ["{{baseUrl}}"],
          "path": ["lessons", "{{lessonId}}"]
        }
      }
    },
    {
      "name": "Update Progress",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"lessonId\": \"{{lessonId}}\",\n  \"lastStepCompleted\": 2\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/progress",
          "host": ["{{baseUrl}}"],
          "path": ["progress"]
        }
      }
    },
    {
      "name": "Get Progress by Lesson",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/progress/{{lessonId}}",
          "host": ["{{baseUrl}}"],
          "path": ["progress", "{{lessonId}}"]
        }
      }
    },
    {
      "name": "Admin - Create Lesson",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "x-admin-token",
            "value": "admin123"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Google Pay Basics\",\n  \"category\": \"UPI\",\n  \"language\": \"English\",\n  \"steps\": [\n    { \"stepNumber\": 1, \"title\": \"Open App\", \"instructionText\": \"Open Google Pay\" },\n    { \"stepNumber\": 2, \"title\": \"Scan QR\", \"instructionText\": \"Scan the QR code\" }\n  ]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/admin/lessons",
          "host": ["{{baseUrl}}"],
          "path": ["admin", "lessons"]
        }
      }
    }
  ]
}
